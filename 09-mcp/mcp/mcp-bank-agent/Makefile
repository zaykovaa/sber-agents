.PHONY: help install run info clean

# Default target
.DEFAULT_GOAL := help

help: ## Show this help message
	@echo "ðŸ“‹ Available commands:"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[36m%-20s\033[0m %s\n", $$1, $$2}'

install: ## Install dependencies via uv
	@echo "ðŸ“¦ Installing dependencies..."
	uv sync
	@echo "âœ… Dependencies installed successfully!"

run: ## Start HTTP MCP server on port 8000
	@echo "ðŸš€ Starting Bank Agent MCP server..."
	@echo "ðŸ“ Server will be available at: http://localhost:8000/mcp"
	@echo "â¹ï¸  Press Ctrl+C to stop"
	@echo ""
	uv run server.py

info: ## Show server information
	@echo "ðŸ“Š Bank Agent MCP Server Information"
	@echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
	@echo "  Name:          mcp-bank-agent"
	@echo "  Transport:     streamable-http"
	@echo "  Port:          8000"
	@echo "  URL:           http://localhost:8000/mcp"
	@echo "  Database:      data/bank_products.json"
	@echo ""
	@if [ -f data/bank_products.json ]; then \
		echo "  ðŸ“Š Database status: âœ… Ready"; \
		uv run python -c "import json; data = json.load(open('data/bank_products.json')); print(f'  ðŸ“ˆ Total products:  {len(data)}')"; \
	else \
		echo "  ðŸ“Š Database status: âŒ Not found"; \
	fi
	@echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"

clean: ## Clean cache and temporary files
	@echo "ðŸ§¹ Cleaning cache and temporary files..."
	@rm -rf __pycache__
	@rm -rf .pytest_cache
	@find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	@find . -type f -name "*.pyc" -delete 2>/dev/null || true
	@echo "âœ… Cleanup complete!"

